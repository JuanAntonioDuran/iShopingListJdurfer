<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Editor.EditProductActivity">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Producto"/>

        <EditText
            android:id="@+id/editProductQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"/>

        <CheckBox
            android:id="@+id/editProductBought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprado"/>

        <CheckBox
        android:id="@+id/editProductLactosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lactosa"/>

        <CheckBox
            android:id="@+id/editProductGlucosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glucosa"/>

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar"/>

        <Button
            android:id="@+id/cancelEditButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>